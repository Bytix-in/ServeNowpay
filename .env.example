# =============================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================

# Application Environment
NODE_ENV=production
APP_URL=https://your-production-domain.com
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# NextAuth Configuration
NEXTAUTH_SECRET=your_secure_nextauth_secret_here
NEXTAUTH_URL=https://your-production-domain.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=your-database-url-here

# Encryption Key for Payment Credentials (64-character hex string)
ENCRYPTION_KEY=your-64-character-encryption-key-here

# =============================================
# CLOUDINARY CONFIGURATION
# =============================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Cloudinary folders for organizing uploads
NEXT_PUBLIC_CLOUDINARY_FOLDER=your_app/uploads
NEXT_PUBLIC_CLOUDINARY_INVOICE_FOLDER=your_app/invoices